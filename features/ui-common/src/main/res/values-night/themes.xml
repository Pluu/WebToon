<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseMaterialAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_variant</item>
        <item name="colorSecondary">@color/red_500</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>

    <style name="BaseMaterialAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>